---
import { Image } from "@astro/image";

const { title, slug, thumbnail, description } = Astro.props;
---
<a href={`/projects/${slug}`} class="project-card">
  <Image src={thumbnail} alt={title} width={300} height={200} format="webp" />
  <h3>{title}</h3>
  <p>{description}</p>
</a>

<style>
  .project-card {
    display: block;
    border: 1px solid #ddd;
    padding: 10px;
    text-decoration: none;
    color: inherit;
  }
  .project-card img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }
</style>