<html>
  <head>
    <title>プロジェクト一覧</title>
    <style>
      .grid-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        padding: 20px;
      }
      .project-card {
        text-align: center;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
      }
      img {
        width: 100%;
        max-width: 300px;
        height: auto;
        border-radius: 10px;
      }
    </style>
  </head>
  <body>
    <h1>プロジェクト一覧</h1>
    <div class="grid-container">
      {projects.map(({ data }) => (
        <a href={`/projects/${data.slug}`} class="project-card">
          <img src={data.image} alt={data.title} />
          <h2>{data.title}</h2>
          <p>{data.description}</p>
        </a>
      ))}
    </div>
  </body>
