---
import fs from "fs";

const baseDir = "public/photo";
const projects = fs.readdirSync(baseDir)
  .filter(folder => fs.statSync(`${baseDir}/${folder}`).isDirectory()) // ✅ フォルダのみ取得
  .map(folder => ({
    title: folder,
    thumbnail: `/photo/${folder}/01.jpeg`, // ✅ 01.jpeg をサムネイルに
    slug: folder // ✅ フォルダ名をスラグとして使用
  }));
---

